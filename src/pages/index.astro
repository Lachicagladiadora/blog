---
import ProjectPost from "../components/ProjectPost.astro";
import { MY_PROJECTS } from "../constants";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = 'Home'

const allPosts = await Astro.glob("./posts/*.md")

const posts = allPosts.filter((c, i)=>((allPosts.length-3) < i) )
---
<BaseLayout pageTitle={pageTitle}>
  <ul class="flex-1 flex flex-wrap gap-4 items-center justify-center my-4">
     {MY_PROJECTS.map((c)=><ProjectPost labelUrlProject={c.labelUrlProject} nameProject={c.nameProject} description={c.description} coverImage={c.coverImage} urlGitHub={c.urlGitHub} urlProject={c.urlProject}/>)}
  </ul>
</BaseLayout>